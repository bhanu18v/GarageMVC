@model IEnumerable<GarageApp_2._0.Models.ViewModel.Overview>

@{
    ViewBag.Title = "Parked Vehicles";
}

<br /><br /><br />


<div class="container">
    <div class="page-header">
        <div class="col-lg-12 text-center">

            <div class="row">
                <img src="~/Images/carbanner.jpg" class="image">
            </div>
        </div>
    </div>
    <br />
    <div class="row">
     
            <h1>List of Parked Vehicles</h1>
       
        <div class="form-group col-lg-offset-8 ">
            <div class="input-group">

                @using (Html.BeginForm())
            {
                    <span class="input-group-addon"><i class="glyphicon glyphicon-search"></i></span>
                        <span class="form-control">

                            <input type="search" name="searchString" placeholder="Search by Reg No." />

                            <input type="submit" value="Search" />

                        </span>
                }

            </div>

        </div>
    </div>
  
    <div class="col-lg-offset-9">
        <a href="../ParkedVehicles/Park"> <input type="submit" value="PARK YOUR VEHICLE" class="btn btn-success" /></a>
    </div>


    <br />

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>@Html.ActionLink("Registration Number", "Index", new { sortOrder = ViewBag.RegistrationNumber })</th>
                <th>@Html.ActionLink("Vehicle Type", "Index", new { sortOrder = ViewBag.VehicleType })</th>
                <th>@Html.ActionLink("Color", "Index", new { sortOrder = ViewBag.Color })</th>
                <th>@Html.ActionLink("Parked Time", "Index", new { sortOrder = ViewBag.ParkedTime })</th>
                <th></th>



            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr class="Search">
                    <td class="Reg">@Html.DisplayFor(modelItem => item.RegNr)</td>
                    <td>@Html.DisplayFor(modelItem => item.Type)</td>
                    <td>@Html.DisplayFor(modelItem => item.Color)</td>
                    <td>@Html.DisplayFor(modelItem => item.ParkedTime)</td>
                    <td>

                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Check Out", "Receipt", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br /><br />
    @Html.ActionLink("Back Home", "Index", "Home")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>

